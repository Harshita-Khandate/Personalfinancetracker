@{
}
@model List<PersonalFinanceTracker.Models.Income>

<h2>My Income</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Category</th>
            <th>Amount</th>
            <th>Note</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IncomeDate.ToShortDateString()</td>
                <td>@item.IncomeCategory.CategoryName</td>
                <td>@item.Amount</td>
                <td>@item.Note</td>
            </tr>
        }
    </tbody>
</table>

